#!/usr/bin/env bash

# CyberXero System Updater
# ---------------------------------------
# - Updates system packages (Pacman, Yay, or Paru)
# - Updates Flatpak applications
# - Updates Rust toolchain (if installed)
# - Updates device firmware (fwupd, skipped inside VMs)
# - Tracks if updates were skipped
# - Smartly detects if a reboot is needed (kernel/firmware)
# - Provides clean, colorful prompts with emojis
# - Old-school [ OK ] reboot status style
# ---------------------------------------
# CyberXero Toolkit ‚Äî System Update Protocol üöÄ

set -e

# Colors ‚Äî CyberXero palette
GREEN='\033[0;32m'
CYAN='\033[0;36m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
BLUE='\033[1;34m'
BOLD='\033[1m'
MAGENTA='\033[0;35m'
ORANGE='\033[0;33m'
LIGHT_GREEN='\033[1;32m'
DIM='\033[2m'
RESET='\033[0m'

skipped_updates=false
must_reboot=false

is_vm() {
  if command -v systemd-detect-virt &>/dev/null; then
    [[ "$(systemd-detect-virt)" != "none" ]]
  else
    return 1
  fi
}

print_title() {
  clear
  echo -e "${BOLD}${CYAN}"
  if command -v figlet &>/dev/null; then
    figlet -f small "CyberXero Update"
  else
    echo "‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó"
    echo "‚ïë            CyberXero System Updater               ‚ïë"
    echo "‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù"
  fi
  echo -e "${DIM}${CYAN}              ‚îÄ‚îÄ CyberXero Toolkit ‚îÄ‚îÄ${RESET}"
  echo
}

if ! command -v figlet &>/dev/null; then
  echo -e "${YELLOW}Installing 'figlet' for banner display...${RESET}"
  if sudo pacman -Syy --noconfirm figlet &>/dev/null; then
    echo -e "${GREEN}[‚úî] figlet installed.${RESET}"
  else
    echo -e "${RED}[‚úò] Failed to install figlet.${RESET}"
  fi
fi

print_title

if command -v yay &>/dev/null; then
  PKG_MANAGER="yay"
elif command -v paru &>/dev/null; then
  PKG_MANAGER="paru"
else
  PKG_MANAGER="pacman"
fi

read -rp "$(echo -e "${CYAN}‚ö° Update protocol ready. Execute ? (Y/n): ${RESET}")" confirm_update
echo
if [[ -z "$confirm_update" || "$confirm_update" =~ ^[Yy]$ ]]; then
  echo -e "${MAGENTA}üì¶ Syncing system packages...${RESET}"
echo
  if [[ "$PKG_MANAGER" == "pacman" ]]; then
    sudo pacman -Syyu
  else
    $PKG_MANAGER -Syyu
  fi
else
  echo -e "${ORANGE}‚ö†Ô∏è Skipped system update.${RESET}"
  skipped_updates=true
fi

if command -v flatpak &>/dev/null; then
  read -rp "$(echo -e "\n${CYAN}üì¶ Flatpak node online. Sync app containers ? (Y/n): ${RESET}")" update_flatpak
echo
  if [[ -z "$update_flatpak" || "$update_flatpak" =~ ^[Yy]$ ]]; then
    echo -e "${MAGENTA}üì¶ Updating Flatpak apps...${RESET}"
    flatpak update -y
  else
    echo -e "${ORANGE}‚ö†Ô∏è Skipped Flatpak updates.${RESET}"
    skipped_updates=true
  fi
else
  echo -e "${CYAN}‚ùå Flatpak is not installed. Skipping Flatpak updates.${RESET}"
fi

if command -v rustup &>/dev/null; then
  read -rp "$(echo -e "\n${CYAN}ü¶Ä Rustup detected. Sync toolchain ? (Y/n): ${RESET}")" update_rust
  if [[ -z "$update_rust" || "$update_rust" =~ ^[Yy]$ ]]; then
    echo -e "${MAGENTA}ü¶Ä Updating Rust toolchain...${RESET}"
    rustup update
  else
    echo -e "${ORANGE}‚ö†Ô∏è Skipped Rust update.${RESET}"
    skipped_updates=true
  fi
fi

if is_vm; then
  echo -e "\n${CYAN}üñ•Ô∏è VM detected ‚Äî firmware sequence suspended.${RESET}"
  echo
else
  if command -v fwupdmgr >/dev/null 2>&1; then
    read -rp "$(echo -e "\n${CYAN}üß© fwupd active. Deploy firmware updates ? (Y/n): ${RESET}")" confirm_fwupd
echo
    if [[ -z "$confirm_fwupd" || "$confirm_fwupd" =~ ^[Yy]$ ]]; then
      echo -e "${MAGENTA}üîÑ Refreshing firmware metadata...${RESET}"
      sudo fwupdmgr refresh --force || true
      echo -e "${MAGENTA}‚öôÔ∏è  Checking and applying firmware updates...${RESET}"
      sudo fwupdmgr update || true
      if fwupdmgr get-devices --no-metadata-refresh | grep -q "Requires reboot"; then
        echo -e "${RED}‚ö° Firmware update requires a reboot to complete!${RESET}"
        must_reboot=true
      fi
    else
      echo -e "${ORANGE}‚ö†Ô∏è Skipped firmware update.${RESET}"
echo
      skipped_updates=true
    fi
  else
    echo -e "${RED}‚ùå fwupd is not installed on this system.${RESET}"
  fi
fi

if [ "$skipped_updates" = true ]; then
  echo -e "${ORANGE}üí° Some updates bypassed ‚Äî run again when ready.${RESET}"
else
  echo -e "\n${LIGHT_GREEN}‚úÖ All updates synced and locked.${RESET}"
fi

current_kernel=$(uname -r)
installed_kernel=$(ls -1 /usr/lib/modules/ | sort -V | tail -n 1)
need_reboot=false

if [[ -n "$installed_kernel" && "$installed_kernel" != "$current_kernel" ]]; then
  echo -e "${RED}‚ö° Kernel mismatch:${RESET} ${YELLOW}${BOLD}${current_kernel}${RESET}${YELLOW} ‚Üí ${BOLD}${installed_kernel}${RESET}${YELLOW}. Reboot required.${RESET}"
  need_reboot=true
fi

if [ "$must_reboot" = true ]; then
  need_reboot=true
fi

if [ "$need_reboot" = true ]; then
  read -rp "$(echo -e "\n${CYAN}üîÑ Core changes applied. Reboot now ? (Y/n): ${RESET}")" confirm_reboot
  if [[ -z "$confirm_reboot" || "$confirm_reboot" =~ ^[Yy]$ ]]; then
    echo -e "${MAGENTA}‚ôªÔ∏è Rebooting system...${RESET}"
    sleep 3
    sudo reboot
  else
    echo -e "${RED}‚ö†Ô∏è Reboot pending ‚Äî restart when possible.${RESET}"
  fi
fi

if [ "$need_reboot" = false ]; then
  echo -e "\n${LIGHT_GREEN}[  OK  ]${RESET} CyberXero ‚Äî all systems nominal."
echo
fi

sleep 5
